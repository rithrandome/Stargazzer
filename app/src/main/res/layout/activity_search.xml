<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_img_potrait"
    tools:context="com.example.stargazzer.SearchActivity">

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/evolve_sans_light_evo"
        android:hint="@string/type_here_to_search"
        android:padding="10dp"
        android:textColor="#61964D"
        android:textColorHint="#FFFFFF"
        android:textSize="25sp" />
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/bg_1"
        android:layout_margin="10dp"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@drawable/scroll_bar"/>

    

</LinearLayout>